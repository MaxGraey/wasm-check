{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "lib"
  },
  "exclude": [
    "lib",
    "tests",
    "web"
  ]
}
